{
  "manifest_version": 2,
  "name": "Hyliter",
  "description": "Saves selected bits of text from your browsing.",
  "version": "0.1",
  "permissions": ["contextMenus"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_title": "View Hylites",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.1.1.min.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["jquery-3.1.1.min.js", "hyliter.js", "background.js"],
    "persistent": true
  }
}
